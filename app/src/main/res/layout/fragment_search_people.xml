<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_roles_searchPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/roleDj_searchPeople"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:text="DJ"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/role"/>
        <TextView
            android:id="@+id/roleAnimator_searchPeople"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Аниматор"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/role"/>

        <TextView
            android:id="@+id/roleCooker_searchPeople"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:text="Повар"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/role"/>

        <TextView
            android:id="@+id/roleDancer_searchPeople"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:text="Танцор"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/role"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_searchPeople"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/card_person"
        android:layout_below="@id/layout_roles_searchPeople"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</RelativeLayout>